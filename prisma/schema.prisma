generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(uuid())
  nombreCompleto String
  email         String   @unique
  passwordHash  String
  role          String?  @default("user")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}